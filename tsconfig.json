{
  "compilerOptions" : {
    "target" : "ESNext",
    "module" : "ESNext",
    "strict" : true,
    "jsx" : "preserve",
    "moduleResolution": "node",
    "esModuleInterop" : true,
    "baseUrl" : ".",
    "lib" : [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck" : true,
    "noEmit" : true,
    "paths" : {
      "@/*" : [
        "src/*"
      ]
    }
  },
  "include" : [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references" : [
    {
      "path" : "./tsconfig.node.json"
    }
  ]
}
